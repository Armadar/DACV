<p id="notice"><%= notice %></p>

<% if current_user && current_user.user? %>
  <h1 class="text-primary">My Services</h1>
  <% else %>
  <h1 class="text-primary">Services</h1>
<% end %>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Day</th>
      <th>Driver</th>
      <% if current_user && current_user.operator? %>
      <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.from %></td>
        <td><%= service.to %></td>
        <td><%= service.dayFormat %></td>
        <% if current_user && current_user.operator? && service.hasDriver %>
        <td class="danger"><%= service.driverName %></td>
        <% end %>
        <% if current_user && current_user.operator? %>
        <td><%= service.userName %></td>
        <% end %>
        <td><%= link_to 'Show', service %></td>
          <% if current_user && current_user.user? %>
          <td><%= link_to 'Edit', edit_service_path(service) %></td>
          <% end %>
          <% if current_user && current_user.operator? && service.hasDriver %>
          <td><%= link_to 'Assign Driver', edit_service_path(service) %></td>
          <% end %>
          <% if current_user && current_user.user? %>
            <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.user? %>
<%= link_to 'New Service', new_service_path %>
<% end %>
