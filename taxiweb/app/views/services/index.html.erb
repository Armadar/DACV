<p id="notice"><%= notice %></p>

<h1>My Services</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Day</th>
      <th>Driver</th>
      <% if current_user && current_user.operator? %>
      <th>User</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.from %></td>
        <td><%= service.to %></td>
        <td><%= service.dayFormat %></td>
        <td><%= service.driverName %></td>
        <% if current_user && current_user.operator? %>
        <td><%= service.user %></td>
        <% end %>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

